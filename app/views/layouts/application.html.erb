<!DOCTYPE html>
<html>
  <head>
    <title>FeZeroWasteKitchen</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css' %>
    
    <!-- Bootstrap JS -->
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js' %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <!-- Flash messages -->
    <% flash.each do |key, message| %>
      <div class="alert alert-<%= key %>">
        <%= message %>
      </div>
    <% end %>

    <nav class="navbar navbar-expand-sm">
      <% if current_user %>
        <a class="nav-item nav-link navbar-brand text-dark" href="<%= user_path(current_user.id) %>">Kitchen</a>
      <% else %>
        <a class="nav-item nav-link navbar-brand text-dark" href="<%= request.path %>"onclick="showSignInMessage()">Kitchen</a>
      <% end %>

      <a class="nav-item nav-link navbar-brand text-dark" href="<%= search_index_path %>">Search</a>

      <% if current_user %>
        <div class="nav-item nav-link navbar-brand text-dark">
        <%= button_to "Log Out", destroy_user_session_path, method: :delete %>
        </div>
      <% else %>
      <div class="nav-item nav-link navbar-brand text-dark">
      <%= button_to "Login", new_user_session_path, method: :get %>
      </div>
      <% end %>
    </nav>

    <script>
      function showSignInMessage() {alert("Please sign in to access the Kitchen!");}
    </script>
    <%= yield %>
  </body>
</html>
