<h1 class="title-text text-center pt-5"> Welcome To Zero Waste Kitchen </h1>
  <hr>
  
<% if current_user %>
  <div class="container btn-group-toggle text-center">
    <%= link_to "Your Kitchen", user_path(current_user.id),class: "btn btn-success btn-sm mt-2", method: :get %>
    <%= link_to "Search Recipes", search_index_path, class: "btn btn-success btn-sm mt-2" %>
  </div>
<% else %>
  <div class="container btn-group-toggle text-center">
    <%= link_to "Login", new_user_session_path, class: "btn btn-success btn-sm mt-2" %>
    <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success btn-sm mt-2" %><br>
    <%= link_to "Search Recipes", search_index_path, class: "btn btn-success btn-sm mt-1" %>
  </div>
<% end %>