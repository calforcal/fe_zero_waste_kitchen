<div class='title container-fluid border text-center'>
  <h1>Welcome To Zero Waste Kitchen</h1>
</div>

<% if current_user %>
  <div class="btn-group d-flex justify-content-center">
    <%= button_to "Your Kitchen", user_path(current_user.id), method: :get, class: "btn btn-primary" %>
    <%= button_to "Search Recipes", search_index_path, class: "btn btn-primary" %>
  </div>
<% else %>
  <div class="btn-group d-flex justify-content-center">
    <%= button_to "Login", new_user_session_path, class: "btn btn-primary" %>
    <%= button_to "Sign Up", new_user_registration_path, method: :get, class: "btn btn-primary" %>
    <%= button_to "Search Recipes", search_index_path, class: "btn btn-primary" %>
  </div>
<% end %>


