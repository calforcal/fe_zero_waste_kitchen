<div class="title">
  <h1 class="title-text text-center pt-5"> <%= @user.name %>'s Zero Waste Kitchen </h1>
    <hr>
</div>

<div class="food_saved">
  <h2 class="text-center"><%= @user.food_saved %> lbs. of food saved </h2>   
</div>

<div class="container btn-group-toggle text-center">
  <%= link_to "Search Recipes", search_index_path, class: "btn btn-success btn-sm mt-2" %><br>
  <%= link_to "Make your own Recipe", new_user_recipe_path(@user.id), class: "btn btn-success btn-sm mt-2" %>
</div><br>

<div class="container-fluid cookbook-title ">
  <h2 class="text-center"><%= @user.name %>'s Cookbook</h2>
</div>

<div class="container-fluid recipes_saved">
  <h2 class="text-center">Saved Recipes</h2>
  
  <div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Saved Recipes
      <span class="caret"></span>
    </button>
  
    <ul class="dropdown-menu">
      <% @facade.saved_recipes.each do |recipe| %>
        <li><a href="<%= user_recipe_path(@user.id, recipe.id) %>"><%= recipe.name %></a></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="container-fluid recipes_created">
  <h2 class="text-center">Created Recipes</h2>
  
  <div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Created Recipes
      <span class="caret"></span>
    </button>
  
    <ul class="dropdown-menu">
      <% @facade.created_recipes.each do |recipe| %>
        <li><a href="<%= user_recipe_path(@user.id, recipe.id) %>"><%= recipe.name %></a></li>
      <% end %>
    </ul>
  </div>
</div>
  

<div class="container-fluid recipes_cooked">
  <h2 class="text-center">Cooked Recipes</h2>

  <div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Cooked Recipes
      <span class="caret"></span>
    </button>

    <ul class="dropdown-menu">
      <% @facade.cooked_recipes.each do |recipe| %>
        <li><a href="<%= user_recipe_path(@user.id, recipe.id) %>"><%= recipe.name %></a></li>
      <% end %>
    </ul>
  </div>
</div>
